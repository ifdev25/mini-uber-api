{
    # Global options
    auto_https off

    # FrankenPHP global configuration (API Platform style)
    frankenphp {
        worker {
            env APP_RUNTIME Runtime\FrankenPhpSymfony\Runtime
            file /app/public/index.php
            num {$FRANKENPHP_NUM_WORKERS:2}
            {$FRANKENPHP_WORKER_CONFIG}
        }
    }
}

# Main server block
:80 {
    # Set root directory
    root * /app/public

    # Enable compression (zstd br gzip per API Platform)
    encode zstd br gzip

    # Cache static assets
    @static {
        file
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static {
        Cache-Control "public, max-age=31536000, immutable"
    }

    # Handle OPTIONS preflight requests first
    @options {
        method OPTIONS
    }
    handle @options {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
            Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept"
            Access-Control-Max-Age "86400"
        }
        respond 204
    }

    # Add CORS and security headers for all other requests
    header {
        # CORS headers
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept"
        Access-Control-Max-Age "86400"

        # Security headers
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # PHP handling (API Platform style)
    php_server {
        resolve_root_symlink
    }

    # Logging
    log {
        output stdout
        format console
        level INFO
    }

    # Error handling
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}
